{
  "name": "clipper-electron",
  "version": "1.0.0",
  "description": "Automated AI Video Workflow",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:5173 tcp:3000 && tsc -p tsconfig.main.json && electron .",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.backend.json && node scripts/copy-worker.js && vite build && electron-builder",
    "build:web": "tsc -p tsconfig.backend.json && node scripts/copy-worker.js && vite build",
    "start": "cross-env NODE_ENV=production node dist/backend/server.js",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "axios": "^1.6.0",
    "bullmq": "^5.0.0",
    "cheerio": "^1.2.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.28.1",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.3.0",
    "lucide-react": "^0.300.0",
    "openai": "^4.104.0",
    "pg": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "user-agents": "^1.1.669",
    "wavefile": "^11.0.0",
    "yt-dlp-exec": "^1.0.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@xenova/transformers": "^2.17.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clipper.app",
    "productName": "Clipper AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**/*",
      "**/node_modules/yt-dlp-exec/**/*",
      "**/node_modules/ffprobe-static/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
